@model Spice.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">
    Category Details
</h2>
<br />


<div class="border background-white">
    <div class="form-group row">
        <div class="col-2">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="col-5">
            <h3> @Html.DisplayFor(model => model.Name)</h3>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_ActionAndBackToListButton" model="@new SpiceAction() {Id=Model.Id,type=ActionType.Details }" />
        </div>
    </div>
</div>


